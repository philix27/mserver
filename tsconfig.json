{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "paths": {
    "@/lib": ["./lib", "/lib", "./src/lib"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
